{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off"
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "files": {
    "includes": ["**/*.ts", "**/*.tsx", "**/*.json"],
    "ignoreUnknown": true
  }
}
