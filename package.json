{
  "name": "scos",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.2",
  "scripts": {
    "dev:web": "turbo run dev --filter=web",
    "dev:order": "turbo run dev --filter=order-api",
    "dev:warehouse": "turbo run dev --filter=warehouse-api",
    "dev:all": "turbo run dev --filter=web --filter=order-api --filter=warehouse-api",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "ci": "turbo run ci",
    "test:unit": "turbo run test:unit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@types/bun": "latest",
    "lefthook": "^2.0.16",
    "turbo": "^2.8.0",
    "typescript": "^5.9.3"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@aws-sdk/client-sqs": "^3.980.0",
      "@logtape/logtape": "^2.0.2",
      "@logtape/pretty": "^2.0.2",
      "env-var": "^7.5.0",
      "zod": "^4.3.6"
    }
  },
  "dependencies": {
    "react-router-dom": "^7.13.0"
  }
}
