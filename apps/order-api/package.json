{
  "name": "order-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target=bun",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "format": "biome check --write .",
