    "migration:run": "bun run scripts/run-migration.ts"
  },
  "devDependencies": {
    "@scos/tsconfig": "workspace:*",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.980.0",
    "@logtape/logtape": "^2.0.2",
    "@logtape/pretty": "^2.0.2",
    "env-var": "^7.5.0",
    "zod": "^4.3.6"
  }
