{
  "name": "warehouse-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target=bun",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "format": "biome check --write .",
    "ci": "biome ci .",
    "test:unit": "echo \"No tests specified\" && exit 0",
    "db:seed": "bun run scripts/seed-db.ts",
    "db:reset": "bun run scripts/reset-db.ts",
    "db:migrate": "bun run scripts/migrate-db.ts",
    "migration:create": "bun run scripts/create-migration.ts -- --name"
  },
  "devDependencies": {
    "@scos/tsconfig": "workspace:*",
    "@scos/shared": "workspace:*",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "catalog:",
    "@logtape/logtape": "catalog:",
    "@logtape/pretty": "catalog:",
    "env-var": "catalog:",
    "zod": "catalog:"
  }
}
